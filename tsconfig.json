{
  "compilerOptions": {
    "lib": ["es6", "es7", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
  ]
}